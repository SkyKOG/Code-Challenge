<%= stylesheet_link_tag    "foundation" %>
<div class = "row">
	<div class = "small-4 small-centered columns">
		<div class = "small-8 small-centered columns" ><h1>Sign in</h1></div>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.text_field :username, :autofocus => true, :placeholder => "Username" %></div>
		  <div><%= f.password_field :password, :placeholder => "Password" %></div>

		  <%= f.submit "Sign in", :class => "button" %>
		<% end %>
	</div>
</div>